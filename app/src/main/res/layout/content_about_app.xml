<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/content_about_app" tools:context="appcpanama.logicstudio.net.appcpanama.AboutAppActivity">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutSecundario"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">


        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:src="@drawable/logoaccp"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/lblText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TableRow>
                    <TextView
                        android:id="@+id/txtLabel1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Version 1.0.0 - 2015"
                        android:layout_margin="2dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="left"
                        android:singleLine="true"
                        android:focusable="true"
                        android:gravity="center_horizontal"
                        android:editable="false"
                        android:ellipsize="start"

                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/txtLabel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="ContÃ¡ctenos"
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:layout_alignParentBottom="true"
                        android:singleLine="true"
                        android:focusable="true"
                        android:editable="false"
                        android:ellipsize="start"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/txtLabel3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="info@appc.org.pa"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:singleLine="true"
                        android:focusable="true"
                        android:gravity="center_horizontal"
                        android:editable="false"
                        android:ellipsize="start"
                        android:textColor="#0000FF"
                        />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/txtLabel4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="+507 317-0298"
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:layout_alignParentBottom="true"
                        android:singleLine="true"
                        android:focusable="true"
                        android:editable="false"
                        android:ellipsize="start"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/txtLabel5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Copyright www.panamericancon.org"
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:layout_alignParentBottom="true"
                        android:singleLine="true"
                        android:focusable="true"
                        android:editable="false"
                        android:ellipsize="start"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
